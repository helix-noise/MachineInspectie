<Page
    x:Class="MachineInspectie.Views.MachineInspection.InspectionComplete"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MachineInspectie.Views.MachineInspection"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Button x:ConnectionId='1' x:Name="btnSend" Content="" HorizontalAlignment="Center" Margin="210,285,210,0" VerticalAlignment="Top" Height="97" Width="187" BorderBrush="#FF06428D" Foreground="Black"                      />
        <Button x:ConnectionId='2' x:Name="btnHome" Content="" HorizontalAlignment="Center" Margin="210,285,210,0" VerticalAlignment="Top" Height="97" Width="187" BorderBrush="#FF06428D" Foreground="Black" Visibility="Collapsed"                      />
        <TextBlock x:Name="lblComplete" HorizontalAlignment="Center" Margin="10,47,10,217" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Height="136" Width="587" Foreground="Black" FontSize="34" TextAlignment="Center"/>
        <ProgressRing x:Name="prSendData" Visibility="Visible" HorizontalAlignment="Center" Margin="275,206,275,0" VerticalAlignment="Top" Foreground="#FF06428D" Background="White"/>
        <Image x:Name="imgOk" Visibility="Collapsed" HorizontalAlignment="Left" Height="57" Margin="275,206,0,0" VerticalAlignment="Top" Width="57" Source="../../Assets/LogoOk.png"/>
        <Image x:Name="imgNok" Visibility="Collapsed" HorizontalAlignment="Left" Height="57" Margin="275,206,0,0" VerticalAlignment="Top" Width="57" Source="../../Assets/LogoNok.png"/>
    </Grid>
</Page>

